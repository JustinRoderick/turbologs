{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "printWidth": 100,
  "tabWidth": 2,
  "sortPackageJson": true,
  "ignorePatterns": [
    ".nitro/",
    ".output/",
    ".prettierrc",
    ".tanstack/",
    "**/api",
    "**/build",
    "**/public",
    "**/public",
    "convex/_generated/",
    "convex/README.md",
    "pnpm-lock.yaml",
    "routeTree.gen.ts"
  ]
}
